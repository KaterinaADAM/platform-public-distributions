<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>plf-standalone-enterprise-tomcat-distribution-content</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- IDE wars -->
    <dependencySet>
      <outputDirectory>/webapps</outputDirectory>
      <includes>
        <include>org.exoplatform.gwt:exo-gwtframework-smartgwt:war</include>
      </includes>
      <outputFileNameMapping>SmartGWT.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapps</outputDirectory>
      <includes>
        <include>org.exoplatform.ide:exo-ide-client-gadget:war</include>
      </includes>
      <outputFileNameMapping>IDE.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
